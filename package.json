{
  "name": "comida",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "core-js": "^3.6.4",
    "epic-spinners": "^1.1.0",
    "swiper": "^6.5.1",
    "vue": "^2.6.11",
    "vue-awesome-swiper": "^4.1.1",
    "vue-resource": "^1.5.1",
    "vue-router": "^3.1.6",
    "vuex": "^3.3.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "style-resources-loader": "^1.3.3",
    "vue-template-compiler": "^2.6.11",
    "webpack-chain": "^6.4.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "overrides": [
      {
        "files": "*.vue",
        "rules": {
          "indent": "off"
        }
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "parser": "babel-eslint"
    },
    "ignorePatterns": [
      "bundle.js"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-console": "off",
      "semi": [
        2,
        "never"
      ],
      "vue/no-v-html": "off",
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 0
        }
      ],
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "always",
            "normal": "never",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ],
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 5,
          "multiline": {
            "max": 1,
            "allowFirstLine": true
          }
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  }
}
